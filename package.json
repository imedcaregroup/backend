{
  "name": "imed-backend",
  "version": "1.0.0",
  "description": "<div align=\"center\"> <img src=\"logo.png\" width=120 height=120/> <h1> IMED BACKEND </h1>   </div>",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "build": "rm -rf ./build && NODE_OPTIONS='--max-old-space-size=4096' npx tsc",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --ignore-pattern \"src/seeders/**\" --fix",
    "dev": "npx nodemon",
    "start": "node ./build/index.js",
    "seed": "npx ts-node-dev src/seeders",
    "start:prod": "pm2 start npm --name imed-backend-prod -- start --output /dev/null --error /dev/null",
    "start:staging": "pm2 start npm --name imed-backend-staging -- start --output /dev/null --error /dev/null",
    "start:container": "docker-compose down --remove-orphans && docker-compose up --build --force-recreate imed-backend -d"
  },
